.btn
    border solid 1px color_blue
    border-radius 50px 
    padding 18px 36px
    min-width 145px
    font-size 16px
    color color_blue
    background none
    outline none
    font-family "circularmedium"

    +For-wide()
        font-size 14px
        padding 14px 32px
    
    +For-large()
        font-size 12px
        padding 12px 24px
    
    +For-tablet-only()
        font-size 16px
        padding 18px 36px
    
    +For-phone-only()
        font-size 12px
        padding 12px 24px