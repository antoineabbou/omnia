@import 'variables'
@import 'mixins'
@import 'easing'
@import 'components'
@import 'fonts'

html
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  box-sizing border-box
  margin 0!important
  padding 0!important
  overflow hidden

*,
*:before,
*:after
  box-sizing border-box
  margin 0

body 
  margin 0!important
  padding 0!important

.hide-mobile
  +For-large-only()
    display none
    visibility hidden
    opacity 0

.hide-desktop
  +For-large-up()
    display none
    visibility hidden
    opacity 0

.layout
  border solid 80px color_white !important

  +For-wide() 
    border solid 60px color_white !important
  
  +For-phone-only()
    border-top solid 60px color_white !important
    border-bottom solid 60px color_white !important

    border-left solid 30px color_white !important
    border-right solid 30px color_white !important