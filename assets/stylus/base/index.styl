@import 'variables'
@import 'mixins'
@import 'easing'
@import 'components'
@import 'fonts'

html
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  box-sizing border-box
  margin 0!important
  padding 0!important
  overflow hidden
  -webkit-tap-highlight-color:  rgba(255, 255, 255, 0); 


*,
*:before,
*:after
  box-sizing border-box
  margin 0

::-webkit-scrollbar { 
  display: none; 
}

body 
  overflow hidden!important
  margin 0!important
  padding 0!important
  -webkit-user-select: none;  /* Chrome all / Safari all */
  -moz-user-select: none;     /* Firefox all */
  -ms-user-select: none;      /* IE 10+ */
  user-select: none;          /* Likely future */ 
  -webkit-tap-highlight-color:  rgba(255, 255, 255, 0); 


.hide-mobile
  +For-large-only()
    display none
    visibility hidden
    opacity 0

.hide-desktop
  +For-large-up()
    display none
    visibility hidden
    opacity 0

.layout
  border solid 80px color_white !important
  height 100%

  +For-wide() 
    border solid 60px color_white !important
  
  +For-phone-only()
    border-top solid 60px color_white !important
    border-bottom solid 60px color_white !important

    border-left solid 30px color_white !important
    border-right solid 30px color_white !important