@import 'variables'
@import 'mixins'
@import 'easing'
@import 'components'
@import 'fonts'

html
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  box-sizing border-box

*,
*:before,
*:after
  box-sizing border-box
  margin 0

.hide-mobile
  +For-large-only()
    display none
    visibility hidden
    opacity 0

.hide-desktop
  +For-large-up()
    display none
    visibility hidden
    opacity 0

.layout
  border solid 80px color_white !important
